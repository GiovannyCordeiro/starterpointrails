<h2>New vehicle</h2>

<% if @vehicle.errors.any? %>
  <% @vehicle.errors.full_messages.each do |message| %>
    <p>
      <%= message %>
    </p>
  <% end %>
<% end %>

<%= form_with model: @vehicle, data: {turbo: false} do |f| %>
  <p>
    <%= f.label :brand, 'brand' %>
    <%= f.text_field :brand %>
  </p>
  <p>
    <%= f.label :model, 'model' %>
    <%= f.text_field :model %>
  </p>
  <p>
    <%= f.label :year, 'year' %>
    <%= f.number_field :year %>
  </p>
  <p>
    <%= f.label :kind, 'kind' %>
    <%= f.number_field :kind %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>